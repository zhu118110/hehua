.main{
	padding: 32rpx 32rpx 0;
	/* width: 100%; */
	background-color: #fff;
}

.header{
	width: 100%;
}
.header swiper{
	height: 377rpx;
}
.header swiper swiper-item{
	width: 100%;
	
}
.header swiper swiper-item image{
	width: 100%;
	height: 100%;
}


.menpiao{
	margin-top: 35rpx;
	display: flex;
	justify-content: space-between;
	width: 100%;
	padding-bottom: 30rpx;
	height: 220rpx;
	border-bottom: 1rpx solid #f5f5f5;
}
.menpiao:nth-child(4){
	border-bottom: none;
}
.menpiao .menpiao_left{
	flex: 1;
}
.menpiao .menpiao_left image{
	width: 100%;
	height: 100%;
}

.menpiao .menpiao_right{
	flex: 2;
	display: flex;
	flex-direction: column;
	margin-left: 20rpx;
	
}
.menpiao .menpiao_right>view{
	box-sizing: border-box;
	font-size: 30rpx;
	overflow: hidden;
	white-space: normal;
	text-overflow: ellipsis;
	display: -webkit-box;
	word-break: break-all;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	line-height: 1.5;
	
}
.menpiao .menpiao_right view:nth-child(3){
	margin-bottom: 0;
	font-size: 28rpx;
	color: #bbb;
}
.menpiao .menpiao_right view:nth-child(2){
	font-size: 28rpx;
	color: #bbb;
}
.img{
	font-size: 28rpx;
}
