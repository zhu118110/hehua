/* pages/luntan/lt_detail/lt_detail.wxss */
.container{
  background-color: #fff
}
.main{
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx 120rpx;
  font-size: 30rpx;

}
.head{
  width: 100%;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f5f5f5;
}
.head .head_title{
  margin: 20rpx 0;
  font-size: 34rpx;
  font-weight: 600;
}
.head_time button{
  color: #b4b4b4;
  background-color: #fff;
  margin: 0;
  padding: 0 10rpx;
}
.head_time button.iconfont{
  font-size: 30rpx
}
.head_time button::after{
  border: none;
}
.icon-tianchongxing-{
  color: #7fc8aa !important;
}
.head_name,.head_time{
  margin-bottom: 10rpx;

  color: #b4b4b4
}
.head_time{
  display: flex;
  justify-content: space-between;
  align-items: center;
}



/* 内容区域 */
.content{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.content .content_img{
   width: 100%;
  box-sizing: border-box;
}
.content .content_img image{
  width: 100%;
  height: 375rpx;
}
.content_article{
  margin-top: 20rpx
}


/* 评论 */
.comment_title{
  font-weight: bold;
  font-size: 34rpx;
  padding: 20rpx 0;
}
.comment_list{
  display: flex;
  justify-content: space-around;
  padding-bottom: 20rpx
}
.comment_list_tx{
  flex: 1;
  
}
.comment_list_tx image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}
.comment_list_infor{
  flex: 5;
 
}
.comment_list_infor_head{
   display: flex;
  justify-content: space-between;
  align-items: center;
}
.comment_name{
  font-weight: bold
}
.comment_time {
  color:#d8d8d8;
  font-size: 26rpx;
}
.icon-dianzan-sx{
  color: #7fc8aa
}
.comment_msg{
  margin: 20rpx 0;
  overflow: hidden;
	display: -webkit-box;
	-webkit-line-clamp: 3;
	-webkit-box-orient: vertical;
	text-overflow:ellipsis;
  word-break: break-all;
}

.comment_reply{
  width: 100%;
  padding: 15rpx 10rpx;
  box-sizing: border-box;
  background-color: #f5f5f5
}
.reply_name{
  color: #7fc8aa
}


.say{
  border-top: 1rpx solid #eee;
  position: fixed;
  padding: 20rpx 0;
  bottom: 0rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  background-color: #fff
}
.say input{
  background-color: #f5f5f5;
  padding: 5rpx 15rpx;
  border-radius: 5rpx
}
.say button{
  background-color: #7fc8aa;
  color: #fff;
  margin: 0
}

.say .input-placeholder {
  font-size: 26rpx;
}



