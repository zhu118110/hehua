<!-- 地址管理 -->
<view class="container">
  <block wx:for="{{ myLocal }}">
    <view class="area">
    <!-- 姓名电话 -->
      <view class="area_title">
        <view class="area_title_name">
          <view>
            {{item.name}}
          </view>
          <view>
            {{item.phone}}
          </view>
        </view>
        <view class="area_title_area">
            {{item.area}}
        </view>
      </view>
    <!-- 删除编辑 -->
      <view class="handle">
        <!-- <radio-group class="radio-group"> -->
          <radio class="radio" checked="{{ defaults }}">
              <text>设为默认</text>
          </radio>
        <!-- </radio-group> -->
        <view class="handle_delete">
          <text class="iconfont icon-bianji1">编辑</text>
          <text class="iconfont icon-shanchu">删除</text>
        </view>
         
       
      </view>
    </view>
  </block>
  
</view>
