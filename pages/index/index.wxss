/**index.wxss**/
.header{
  width: 100%;
  height: 393rpx;
	background-color: #fff;
}
.header swiper{
  width: 100%;
  height: 100%
}
.header image{
  width: 100%;
  height: 100%
}

.list{
	margin-top: 20rpx;
	width: 100%;
	background-color: #fff;
}
.listBox{
	width: 90%;
	height: 100%;
	margin: 0 auto;
	padding: 38rpx 0;
}
.listTitle{
	color: #333;
	font-weight: 600;
	display: flex;
	justify-content: space-between;
	align-items: baseline;
}

.threeDty{
  width: 100%;
  background-color: #fff;
}

.threeDtyBox .threeD_img{
	width: 100%;
	margin-top: 25rpx;
	display: flex;
	justify-content: space-around;
}
.threeD_img .threeD_img_item{
	flex: 1;
	margin-right: 15rpx;
	font-size: 0;
}
.threeD_img .threeD_img_item:nth-child(3){
	margin-right: 0;
}
.threeDtyBox .threeD_img_item image{
  width: 100%;
	height: 220rpx;
}


/* 新闻 */

.newsTitle text:nth-child(2){
	font-size: 28rpx;
	color: #9a9a9a;
}
.news_Img{
	width: 100%;
	margin-top: 25rpx;
	display: flex;
	justify-content: space-around;
}
.news_Img_item{
	flex:1;
	
}
.news_Img_item:nth-child(1){
	margin-right: 25rpx;
}
.news_Img_item image{
	width: 100%;
	height: 188rpx;
}
.news_Img_title{
	margin-top: 20rpx;
	font-size: 28rpx;
}
.news_Img_from{
	font-size: 26rpx;
	color: #b4b4b4;
	display: flex;
	justify-content: space-between;
}


/* 论坛 */
.ltTitle text:nth-child(2){
	font-size: 28rpx;
	color: #9a9a9a;
}
.movable{
	height: 190rpx;
	margin-top: 25rpx;
	width: 100%;
}
.listBox movable-area movable-view{
	width:140%;
	font-size: 0;
	display: flex;
	justify-content: space-around;
}
.listBox movable-area movable-view view{
	width:60%;
	margin-right: 25rpx;
}
.listBox movable-area movable-view view:nth-child(3){
	margin-right: 0;
}
.listBox movable-area movable-view image{
	height: 190rpx;
	width: 100%;
}
